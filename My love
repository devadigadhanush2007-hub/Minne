    <script>
        // Generate floating hearts
        function createHearts() {
            const container = document.getElementById('heartsContainer');
            for (let i = 0; i < 20; i++) {
                const heart = document.createElement('div');
                heart.className = 'heart';
                heart.innerHTML = 'ðŸ’—';
                heart.style.left = Math.random() * 100 + '%';
                heart.style.animationDelay = Math.random() * 4 + 's';
                container.appendChild(heart);
            }
        }
        createHearts();

        
        // Toggle Dark Mode
        function toggleDarkMode() {
            document.body.classList.toggle('dark');
        }

        // Progress Bar (increases with interactions)
        let progress = 0;
        function updateProgress() {
            progress += 10;
            if (progress > 100) progress = 100;
            document.getElementById('progress').style.width = progress + '%';
        }

        // Show response form
        function showResponseForm(type) {
            const form = document.getElementById('responseForm');
            form.classList.add('show');
            updateProgress();
            alert(type === 'yes' ? 'Yay! i love you darling ðŸ˜šðŸ˜šðŸ˜šðŸ’—ðŸ’—' : 'No worries, I still think you\'re amazing!');
        }

        // Submit response
        function submitResponse(event) {
            event.preventDefault();
            const name = document.getElementById('name').value;
            const message = document.getElementById('message').value;
            alert(`Thanks, ${name}! Your message: "${message}"`);
            updateProgress();
        }

        // Reveal secret message
        function revealSecret() {
            const secret = document.getElementById('secretMessage');
            secret.style.display = 'block';
            secret.style.animation = 'fadeIn 1s';
            updateProgress();
        }

        // Ask love question
        function askLoveQuestion() {
            const question = document.getElementById('loveQuestion');
            question.classList.add('show');
            updateProgress();
        }

        // Handle love response
        function loveResponse(answer) {
            const message = document.getElementById('loveMessage');
            const noButton = document.getElementById('noLove');
            if (answer === 'yes') {
                message.innerHTML = 'Yay! I knew it i love you babyyðŸ’–';
                noButton.style.display = 'none';
            } else {
                message.innerHTML = 'Please say yes? I promise to make you happy! ðŸ˜Š';
                noButton.style.position = 'absolute';
                noButton.style.left = Math.random() * 80 + '%';
                noButton.style.top = Math.random() * 80 + '%';
            }
            updateProgress();
        }

        // Start Quiz
        let quizScore = 0;
        let currentQuestion = 0;
        const questions = [
            { q: "What's my favorite color?", a: "black", options: ["black", "Blue", "Green"] },
            { q: "What's my dream date?", a: "movie", options: ["Beach", "Movie", "Hiking"] },
            { q: "What's something I love about you?", a: "smile", options: ["Smile", "Laughter", "Kindness"] }
        ];
        function startQuiz() {
            const quiz = document.getElementById('quiz');
            quiz.classList.add('show');
            currentQuestion = 0;
            quizScore = 0;
            showQuestion();
            updateProgress();
        }
        function showQuestion() {
            if (currentQuestion < questions.length) {
                const q = questions[currentQuestion];
                document.getElementById('question').innerHTML = `Question ${currentQuestion + 1}: ${q.q}`;
                const container = document.getElementById('questionContainer');
                container.innerHTML = `<p id="question">Question ${currentQuestion + 1}: ${q.q}</p>`;
                q.options.forEach(option => {
                    const btn = document.createElement('button');
                    btn.innerHTML = option;
                    btn.onclick = () => answerQuiz(option.toLowerCase());
                    container.appendChild(btn);
                });
            } else {
                document.getElementById('quizResult').innerHTML = `Quiz Complete! Score: ${quizScore}/${questions.length}. You're perfect for me! ðŸ’•`;
            }
        }
        function answerQuiz(answer) {
            if (answer === questions[currentQuestion].a) {
                quizScore++;
            }
            currentQuestion++;
            showQuestion();
        }

        // Show Video
        function showVideo() {
            const video = document.getElementById('video');
            video.classList.add('show');
            updateProgress();
        }

        // Show Gallery
        function showGallery() {
            const gallery = document.getElementById('gallery');
            gallery.classList.add('show');
            updateProgress();
        }

        // Show Chat
        function showChat() {
            const chat = document.getElementById('chat');
            chat.classList.add('show');
            updateProgress();
        }

        // Chat Functionality
        function sendMessage(event) {
            if (event && event.key !== 'Enter') return;
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            if (message) {
                const messages = document.getElementById('chatMessages');
                messages.innerHTML += `<p><strong>You:</strong> ${message}</p>`;
                input.value = '';
                // Simulate response (in real app, connect to backend)
                setTimeout(() => {
                    messages.innerHTML += `<p><strong>Me:</strong> That's sweet! ðŸ˜˜</p>`;
                    messages.scrollTop = messages.scrollHeight;
                }, 1000);
            }
        }

        // Trigger Confetti on Yes
        function triggerConfetti() {
            const container = document.getElementById('confettiContainer');
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + '%';
                confetti.style.animationDelay = Math.random() * 3 + 's';
                confetti.style.background = `hsl(${Math.random() * 360}, 100%, 50%)`;
                container.appendChild(confetti);
                setTimeout(() => container.removeChild(confetti), 3000);
            }
        }
    </script>
</body>
